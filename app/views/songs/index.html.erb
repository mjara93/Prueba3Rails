<div class="row">
  <div class="col-lg-6">
    <h1>Songs</h1>
  </div>
  <div class="col-lg-6">
    <%= form_tag songs_path, method: :get do %>
    <%= select_tag :genre_id, options_from_collection_for_select(Genre.all, "id", "name", params[:genre_id]), prompt: "Genero", class: "form-control" %>
      <%= submit_tag "Buscar", name: nil %>
  <% end %>
  </div>
</div>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Duration</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= song.duration %></td>
        <td><%= song.genre.name %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Agregar a playlist', add_song_path(song), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song', new_song_path %>
